pipeline{
    agent {label 'worker'}
    options{
        buildDiscarder(logRotator(daysToKeepStr: '7'))
        disableConcurrentBuilds()
        timeout(time: 2, unit : 'MINUTES')
        retry(3)
    }
    parameters{
        string(name: 'BRANCH', defaultValue: 'master')
        booleanParam(name: 'Demo', defaultValue: false )
        choice(name: 'OPERATION', choices: ['A', 'S', 'M', 'D'])
    }
    triggers{
        cron('H */4 * * *')
        pollSCM('H */4 * * *')
    }
    tools{
        maven 'maven3.8'
    }
    environment{
        ECS_CLUSTER  = "VOTE"
    }


    stages {
    stage('Git Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Build Docker Image') {
      parallel {
        stage('Build Docker Image') {
          steps {
            sh 'cd vote'
            sh 'ls -l'
            sh 'docker build -t 792294754332.dkr.ecr.us-east-1.amazonaws.com/vote:${BUILD_NUMBER} .'
            sh 'aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin 792294754332.dkr.ecr.us-east-1.amazonaws.com'
            sh 'docker push 792294754332.dkr.ecr.us-east-1.amazonaws.com/vote:${BUILD_NUMBER}'
          }
        }
    stage('Unit Testing') {
          steps {
            sh 'echo Run the Test Cases'
          }
        }

      }
    }
    }

    post{
        always{
            echo "Running always"
        }
    }
}
